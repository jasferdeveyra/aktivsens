<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dateNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="60dp"
                        android:gravity="center"
                        android:text="JAN 1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FBFBFB"
                        android:textSize="25sp"
                        tools:ignore="ExtraText" />

                    <ImageView
                        android:id="@+id/topimage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/active" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/yescount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="YESTERDAY: 0 "
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/goalcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="GOAL COUNT: 0"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/walk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center|center_vertical"
                            android:layout_weight="2"
                            android:src="@drawable/walk"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/stepscount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="80sp" />

                        <ImageView
                            android:id="@+id/run"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center|center_vertical"
                            android:layout_weight="2"
                            android:src="@drawable/run"
                            android:visibility="invisible"
                            tools:src="@drawable/run" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:textSize="7sp"
                        android:layout_marginBottom="6dp"
                        android:text="CLICK THE NUMBER TO VIEW HISTORY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/walker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="WALKING"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp"
                            android:visibility="invisible" />


                        <TextView
                            android:id="@+id/movetoday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:text="MOVEMENTS TODAY"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="20sp"
                            tools:ignore="ExtraText" />

                        <TextView
                            android:id="@+id/runner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="RUNNING"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp"
                            android:visibility="invisible" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/distancecount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/burncount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="9865.3"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/timecount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="40sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/distanceunit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="km"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/burnunit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="cal"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/timeunit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="min"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/distancetext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="DISTANCE COVERED"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/burntext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="CALORIES BURNED"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/timetext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="MOVEMENT TIME"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FBFBFB"
                            android:textSize="10sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="206dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/docspeak"
                            android:layout_width="61dp"
                            android:layout_height="124dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/docspeak" />

                        <TextView
                            android:id="@+id/chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/chat_bubble_background"
                            android:padding="11dp"
                            android:text=". . ."
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>